<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Family Controls for Screen Time API (iOS) -->
	<key>com.apple.developer.family-controls</key>
	<true/>

	<!-- App Groups for sharing data with extensions (Content Blocker, etc.) -->
	<key>com.apple.security.application-groups</key>
	<array>
		<string>group.com.refocus.shared</string>
	</array>

	<!-- Keychain sharing for auth tokens -->
	<key>keychain-access-groups</key>
	<array>
		<string>$(AppIdentifierPrefix)com.yourcompany.ReFocus</string>
	</array>
</dict>
</plist>
